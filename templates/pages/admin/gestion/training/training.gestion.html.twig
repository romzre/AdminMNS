{% extends "partials/base-admin.html.twig" %} 
{% block body%}
<div class="contAllDataGestion">
    <form action="/?area=admin&controller=gestion&action=training" method="POST">
        <div class="contDataGestion  ">
            <input type="hidden" name="id" value="{{ training.getIdTraining }}" />
            <h2>{{ training.title_formation }}</h2>
            <div>
                <label for="title_formation">Titre de la formation</label>
                <input type='text' value='{{ training.getTitleFormation }}' name="title_formation" id="title_formation" />
            </div>
            <div>
                <label for="capacity_training">Capacité d'accueil</label>
                <input type='number' value='{{ training.getCapacityTraining }}' name="capacity_training" id="capacity_training" />
            </div>
            <div>
                <label for="isValid">Statut</label>
                <select name="isValid" id="isValid">
                    <option value="1">Valide</option>
                    <option value="0">Non Valide</option>
                </select>
            </div>
            <div class='contBtnMenu'>
                <a href="/?area=admin&controller=gestion"><button type="button" class=" btn btn-primary btn-lg">Retour</button></a>
                <button type="submit" class=" btn btn-primary btn-lg" name="submit">Modifier</button>
            </div>
        </div>
    </form>
    <div class="ContgestionTable">
        {% if documents %} 
            <table class="dataTable gestionTable">
                <thead>
                    <td class="headTable right left">Documents demandés</td>
                </thead>
                <tbody id="myTable">
                        {% for id , document in documents %}
                            <tr>
                                <td class="cel celtraining" data-info="Document" ><span  >{{ document }}</span>
                                    <div>
                                        <span><img data-id="{{ id }}" class="DocName" src="images/edit.png" /></span>
                                        <span>
                                            <form method="POST" action="/?area=admin&controller=gestion&action=training&id={{ training.getIdTraining }}">
                                                    <input type="hidden" name="id_typeOfDoc" value="{{ id }}"  />
                                                    <input type="hidden" name="delete" />
                                                <label class='labdel' for='btn_delete{{ id }}'>
                                                    <img  src="images/delete.png" />
                                                    <input type="submit" class="hiddenbtn" id="btn_delete{{ id }}" name="submit_delete{{ id }}"  />
                                                </label>
                                            </form>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun document n'est requis pour la formation actuellement</p>
        {% endif %}
        <form method="POST" action="/?area=admin&controller=gestion&action=training&id={{ training.getIdTraining }}">

        <input   id="editDoc" type="text" name="doc"  />
        <input id="IdeditDoc" type="hidden" name="Iddoc" />
        
        <label id="Lab_submit"  class="hiddenbtn" for="btn_submit"><img src="images/accept.png" /></label>
        <button id="btn_submit" class="hiddenbtn" type="submit" name="submit_edit"></button>

        <label id="Lab_submit_add"  for="btn_submit_add"><img src="images/add.png" /></label>
        <button id="btn_submit_add" class="hiddenbtn" type="submit" name="submit_add"></button>
        
        <label id="Lab_cancel"   for="btn_cancel"><img src="images/cancel.png" /></label>
        <button id="btn_cancel" class="hiddenbtn" type="button" name=""></button>
        </form
        {% if message is defined %}
            <p>{{ message }}</p>
        {% endif %}
    </div>
</div>
<script src="scripts/adminDash.js"></script>

{% endblock %}