{% extends "partials/base-admin.html.twig" %} 
{% block body%}
<div class='contBtnMenu'>
        <a href="/?area=admin&controller=home&action=candidates"><button type="button" class="btn btn-primary btn-lg">Candidats</button></a>
        <a href="/?area=admin&controller=home"><button type="button" class="active btn btn-primary btn-lg">Stagiaires</button></a>
</div>
<div class="cont_Search">
    <label for="myInput">Rechercher</label>
    <input type="text" id="myInput" />
</div>
<div class="contData">
    <table class="dataTable">
        <thead>
            <td class="headTable left">Prénom</td>
            <td class="headTable">Nom</td>
            <td class="headTable">Email</td>
            <td class="headTable ">Formation</td>
            <td class="headTable ">Classe</td>
            <td class="headTable right">Action</td>
        </thead>
        <tbody id="myTable">
            {% for user in trainees %}
                <tr>
                    <td class="cel" data-info="Prénom" ><a class="anim-hover" href="index.php?area=admin&controller=profile&action=trainee&id={{ user.id_user }}">{{ user.firstName }}</a></td>
                    <td class="cel" data-info="Nom" ><a >{{ user.familyName }}</a></td>
                    <td class="cel" data-info="Email" ><a href="mailto:{{ user.email }}"><img src="images/email.png" /> {{ user.email }} </a></td>
                    <td class="cel" data-info="Formation" ><a>{{ user.title_formation }}</a></td>
                    <td class="cel" data-info="Classe" >
                    
                    {% if user.classroom is not defined %}
                        <a href="/?area=admin&controller=trainee&action=addTraineeToClassroom&id={{ user.id_user }}"><img src="images/add.png" /></a>
                    {% else %}
                    {{ user.classroom }}
                    {% endif %}

                    </a></td>
                    <td  class="cel" data-info="Action">Aucune action disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<script src="scripts/adminDash.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
{% endblock %}