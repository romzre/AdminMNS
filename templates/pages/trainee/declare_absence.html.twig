{% extends "partials/base-trainee.html.twig" %}

{% block body %}

	<div class="container">
		<div class="container-btn-back row justify-center-start mt-4">
			<a href="./?area=trainee&controller=absence">
				<button class="btn-primary">Retour</button>
			</a>
		</div>
		<div class="row container-title-absence">
			<h2 class="col-12">Déclarer une absence</h2>
		</div>

		<div class="row justify-content-center">
			{% if message is not empty %}
				<div class="col-4 col-md-6 alert-info alert text-center">{{message|raw}}</div>
			{% endif %}
			<div class="col-10 d-flex justify-content-center text-center">
				<form class="form-declare-abs" action="#" method='post' enctype='multipart/form-data'>
					<div class="form-floating my-3">
						<input name="startingDate_absence" type="date" class="form-control" id="floatingInput">
						<label for="floatingInput">Date de début de l'absence</label>
					</div>
					<div class="form-floating my-3">
						<input name="endDate_absence" type="date" class="form-control" id="floatingInput" placeholder="Password">
						<label for="floatingPassword">Date de fin</label>
						<span class="message-alerte alert-date">La date de fin de votre absence doit être postérieure à celle de début</span>
					</div>
					<div class="input-group my-3">
						<div class="input-group-prepend">
							<label class="input-group-text" for="absence_motif">Motif</label>
						</div>
						<select class="custom-select" name="id_motif" id="absence_motif">
							<option value="null">Choisir...</option>
							{% for  motif in motifs %}
								<option value="{{motif.id_motif}}">{{motif.wording_motif}}</option>
							{% endfor %}
						</select>
					</div>

					<div class="form-check">
						<input type="checkbox" name="checkbox_justificatif" class="form-check-input" id="checkbox_justificatif">
						<label class="form-check-label" for="checkbox_justificatif">Transmettre un justificatif
						</label>
					</div>
					<div class="container-form-input my-3">
						<label for="formFile" class="form-label"></label>
						<input class="form-control form-input" type="file" id="formFile">
					</div>
					<button type="submit" name="btn-declare-abs" class="btn btn-primary btn-lg">Envoyer</button>


				</form>
			</div>
		</div>

		<script src="/scripts/trainee-declare-absence.js"></script>
	{% endblock %}
